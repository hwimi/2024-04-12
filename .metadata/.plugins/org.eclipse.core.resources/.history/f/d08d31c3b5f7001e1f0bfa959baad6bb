<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>

<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
	<h1>form 태그로 전달한 파라미터 받기</h1>
	<!-- EL 태그 방식은 내부적으로 형변환을 하여 연산이 가능함 -->
	이름:${param.name }
	<br> 나이:${param.age+1 }
	<br>
	<!-- 스크립틀릿 방식으로 파라미터 가져오기 -->
	<!-- 파라미터 값을 문자열로 인식 연산불가능 형변환 필요 -->
	<%=request.getParameter("name") %>
	<%=request.getParameter("age")+1 %>
	
	
	
	
	

	<!-- c:if 이옹하여 나이가 18세 이하면 미성년자 입니다라고 출력 -->
	<c:if test="${param.age<=18 }">
	<h2>미성년자 입니다</h2>
	</c:if>
	<c:if test="${param.age>18 }">
		<h2>성인입니다</h2>
	</c:if>
	<hr>
	
	<!-- choose 사용하여 다중조건 처리 -->
	<!-- age가19세 이상은 성인 ,15세 이상은 청소년 ,5세이상은 어린이,나머지는 유아 -->
	<!-- c:when/c:otherwise  -->
	<c:choose>
	
	
	<c:when test="${param.age>19 }">
		<h3>${param.name }님은 ${param.age }세 성인입니다  </h3>
	</c:when>
	<c:when test="${param.age>=15 }">
		<h3>${param.name }님은 ${param.age }세 청소년  </h3>
	</c:when>
	<c:when test="${param.age>=5 }">
		<h3>${param.name }님은 ${param.age }세 어린이  </h3>
	</c:when>
	
	</c:choose>
	
	
	
	
	
</body>
</html>